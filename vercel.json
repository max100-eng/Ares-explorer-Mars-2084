{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",

  "functions": {
    "api/*.js": {
      "runtime": "nodejs"
    }
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
