{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",

  "functions": {
    "api/*.js": {
      "runtime": "nodejs"
    }
  },

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],

  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        }
      ]
    },
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],

  "env": {
    "VITE_APP_NAME": "Ares Explorer",
    "VITE_APP_VERSION": "0.0.1"
  },

  "regions": ["iad1"]
}
